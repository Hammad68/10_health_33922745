<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>My Appointments</title>
  <link rel="stylesheet" href="/main.css">
  <style>
    body { font-family: Arial, sans-serif; padding: 20px; }
    h1 { color: #333; }
    table { border-collapse: collapse; width: 100%; margin-top: 20px; }
    th, td { border: 1px solid #ccc; padding: 10px; text-align: left; }
    th { background-color: #f4f4f4; }
    .no-appointments { color: #888; margin-top: 20px; }
  </style>
</head>
<body>

  <h1>My Upcoming Appointments</h1>

  <% if (appointments && appointments.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Time</th>
          <th>Doctor / Reason</th>
          <th>Status</th>
          <th>Patient</th>
        </tr>
      </thead>
      <tbody>
        <% appointments.forEach(function(a) { %>
          <tr>
            <td><%= a.Date %></td>
            <td><%= a.Time %></td>
            <td><%= a.Appointment_Reason %></td>
            <td><%= a.status %></td>
            <td><%= a.Patient_Name %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
  <% } else { %>
    <p class="no-appointments">You have no upcoming appointments.</p>
  <% } %>


  <br><a href="/about">About <%=clinicData.clinicName%></a>

</body>
</html>